# {{ ansible_managed }}
---
version: "3"

services:
  nexus3:
    container_name: nexus3
    image: sonatype/nexus3
    hostname: '{{ nexus3_hostname }}'
    ports:
      - "8081:8081"
    expose:
      - 8081
    volumes:
      - nexus-data:/nexus-data
    restart: unless-stopped

volumes:
  nexus-data:
